root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.bat]
end_of_line = crlf

[*.{md,markdown}]
indent_style = tab
indent_size = 4
max_line_length = 80
trim_trailing_whitespace = false

[*.{ex,exs}]
max_line = 80

[Makefile]
indent_style = tab
indent_size = 4
max_line_length = 80
